<h2 class="title user_edit_title"><%= t('.title', resource: resource.model_name.human) %></h2>

<div class="form_container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <ul class="form_items">

      <li class="field">
        <%= f.label :email, class: 'form_items__label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form_items__content' %>
      </li>

      <li class="field">
        <%= f.label :zipcode, class: 'form_items__label' %>
        <%= f.text_field :zipcode, class: 'form_items__content zipcode' %>
      </li>

      <li class="field">
        <%= f.label :location, class: 'form_items__label' %>
        <%= f.text_field :location, class: 'form_items__content location' %>
      </li>

      <li class="field">
        <%= f.label :bio, class: 'form_items__label' %>
        <%= f.text_area :bio, class: 'form_items__content bio' %>
      </li>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <li><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></li>
      <% end %>

      <li class="field">
        <ul class="form_items__label">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <i><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></i>
          <% end %>
        </ul>
        <%= f.password_field :password, autocomplete: "new-password", class: "form_items__content" %>
      </li>
      <div class="form_items__footnote">
        <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i>
      </div>
      <li class="field">
        <%= f.label :password_confirmation, class: 'form_items__label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form_items__content' %>
      </li>
      <li class="field">
        <ul class="form_items__label">
          <%= f.label :current_password %>
        </ul>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form_items__content' %>
      </li>
      <div class="form_items__footnote">
        <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i>
      </div>
    </ul>

    <div class="actions">
      <%= link_to t('devise.shared.links.back'), :back, class: "btn white_btn" %>
      <%= f.submit t('.update'), class: "btn orange_btn form_btn" %>
    </div>
  <% end %>

  <div class="actions">
    <h3 hidden><%= t('.cancel_my_account') %></h3>
    <p hidden><%= t('.unhappy') %></p>
    <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn red_btn" %>
  </div>

</div>