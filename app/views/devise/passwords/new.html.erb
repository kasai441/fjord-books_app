<h2 class="title user_new_title"><%= t('.forgot_your_password') %></h2>
<div class="form_container">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form_items">
      <div class="field">
        <div class="form_items__label">
          <%= f.label :email %><br />
        </div>
        <div class="form_items__content">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('.send_me_reset_password_instructions'), class: "btn orange_btn" %>
    </div>
  <% end %>

  <div class="actions">
    <%= render "devise/shared/links" %>
  </div>

</div>
