<h2 class="title report_show_title">
  <%= @report.title %>
</h2>

<div class="show">
  <div class="show_picture show_picture_report">
    <div class="show_item show_item_report">
      <%= image_tag @report.user.avatar.variant(gravity: :center, resize:"60x60^", crop:"60x60+0+0").processed if @report.user.avatar.attached? %>
    </div>
  </div>

  <ul class="show_items show_items_report">
    <li class="show_item show_item__gray">
      <%= t('views.reports.last_update', user_name: @report.user.name) %>
    </li>
    <li class="show_item show_item__textarea">
      <%= @report.content %>
    </li>
  </ul>
</div>
<div class="actions">
  <%= link_to t('views.common.back'), :back, class: "btn white_btn" %>
  <%= link_to t('views.common.edit'), edit_report_path(@report), class: "btn orange_btn" %>
</div>
