<div class="form_container">

  <%= form_with(model: book, local: true) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <ul class="form_items">

      <li class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
      </li>

      <li class="field">
        <%= form.label :memo %>
        <%= form.text_area :memo %>
      </li>

      <li class="field">
        <%= form.label :author %>
        <%= form.text_field :author %>
      </li>

      <li class="field">
        <%= form.label :picture %>
        <%= form.file_field :picture %>
      </li>

    </ul>

    <div class="actions">
      <%= link_to t('views.common.back'), books_path, { class: "btn white-btn" } %>
      <%= form.submit t('helpers.submit.update'), :class => "btn orange-btn form-btn" %>
    </div>

  <% end %>

</div>